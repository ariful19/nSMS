<section class="dashboard">
  <header class="dashboard__header">
    <h1 class="dashboard__title">Welcome back, <%= currentUser.displayName %></h1>
    <p class="dashboard__subtitle">
      Stay on top of campus updates and upcoming activities. Pin important notices and review the next
      events at a glance.
    </p>
  </header>

  <div
    class="dashboard__grid dashboard__grid--communications"
    data-vue-app="DashboardCommunicationsApp"
    data-state-id="dashboard-state"
  ></div>

  <noscript>
    <%- include("./_communications-fallback", { notices, events }) %>
  </noscript>
</section>

<script type="application/json" id="dashboard-state">
  <%- dashboardState || '{}' %>
</script>
